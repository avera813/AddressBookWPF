<Page x:Class="AddressBookWPF.AddressBookHome"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AddressBookWPF"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="AddressBookHome">

    <Grid Margin="10,10,10,10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Style="{StaticResource headerTextStyle}">Address Book</Label>
        <Button Style="{StaticResource buttonStyle}" x:Name="createAddressBook" Grid.Row="1" Grid.Column="0" Margin="20,0,20,50">Create New</Button>
        <Button Style="{StaticResource buttonStyle}" x:Name="loadAddressBook" Grid.Row="1" Grid.Column="0" Margin="20,50,20,0" Click="loadAddressBook_Click">Load</Button>
    </Grid>
</Page>
